{
    "name": "Motia Grandmaster Env",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
      "ghcr.io/devcontainers/features/node:1": {},
      "ghcr.io/devcontainers/features/python:1": {}
    },
    "forwardPorts": [3000],
    "postCreateCommand": "npm install && sudo apt-get update && sudo apt-get install -y redis-server && pip install python-dotenv",
    "customizations": {
      "vscode": {
        "settings": {
          "python.defaultInterpreterPath": "/usr/local/bin/python"
        },
        "extensions": [
          "dbaeumer.vscode-eslint",
          "ms-python.python"
        ]
      }
    }
  }